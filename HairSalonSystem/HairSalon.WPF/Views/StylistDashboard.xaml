<Window x:Class="HairSalon.WPF.StylistDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HairSalon.WPF"
        mc:Ignorable="d"
        Title="StylistDashboard" Height="450" Width="800">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="MediumPurple" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="lblWelcome" 
                          Text="Welcome, Stylist!" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White"
                          VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,15,0">
                    <TextBlock Text="View Schedule:" 
                              FontSize="14" 
                              Foreground="White"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>
                    <DatePicker x:Name="dpScheduleDate" 
                               Width="150"
                               Height="35"
                               SelectedDateChanged="dpScheduleDate_SelectedDateChanged"/>
                </StackPanel>

                <Button x:Name="btnLogout"
                       Grid.Column="2"
                       Content="Logout" 
                       Width="100"
                       Height="40"
                       Background="#E74C3C"
                       Foreground="White"
                       FontSize="14"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="btnLogout_Click"/>
            </Grid>
        </Border>

        <!-- Appointments Table -->
        <Border Grid.Row="1" Background="White" Margin="20,20,20,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0" 
                          x:Name="lblScheduleTitle"
                          Text="Today's Appointments:" 
                          FontSize="18" 
                          FontWeight="Bold"
                          Margin="15,15,15,10"/>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1" 
                         x:Name="dgAppointments"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         SelectionMode="Single"
                         CanUserAddRows="False"
                         HeadersVisibility="Column"
                         GridLinesVisibility="All"
                         AlternatingRowBackground="#F4ECF7"
                         Margin="15,0,15,15">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Time" 
                                          Binding="{Binding TimeSlot}" 
                                          Width="120"/>
                        <DataGridTextColumn Header="Customer" 
                                          Binding="{Binding CustomerName}" 
                                          Width="180"/>
                        <DataGridTextColumn Header="Service" 
                                          Binding="{Binding ServiceName}" 
                                          Width="*"/>
                        <DataGridTextColumn Header="Price" 
                                          Binding="{Binding TotalPrice}" 
                                          Width="80"/>
                        <DataGridTextColumn Header="Status" 
                                          Binding="{Binding Status}" 
                                          Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Footer with Mark Complete Button -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="20,10">
            <Button x:Name="btnMarkCompleted" 
                   Content="Mark Selected as Completed" 
                   Width="240"
                   Height="40"
                   Background="#27AE60"
                   Foreground="White"
                   FontSize="14"
                   FontWeight="Bold"
                   BorderThickness="0"
                   HorizontalAlignment="Center"
                   Cursor="Hand"
                   Click="btnMarkCompleted_Click"/>
        </Border>
    </Grid>

</Window>
