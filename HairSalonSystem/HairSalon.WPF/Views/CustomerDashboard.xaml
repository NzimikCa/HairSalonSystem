<Window x:Class="HairSalon.WPF.CustomerDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HairSalon.WPF"
        mc:Ignorable="d"
        Title="Customer Dashboard" Height="550" Width="850"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <!-- Header with Welcome and Buttons -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="lblWelcome" 
                          Text="Welcome, Customer!" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White"
                          VerticalAlignment="Center"/>
                <Button x:Name="btnBookAppointment"
                       Grid.Column="1"
                       Content="Book Appointment" 
                       Width="160"
                       Height="40"
                       Background="#27AE60"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="Bold"
                       BorderThickness="0"
                       Margin="0,0,15,0"
                       Cursor="Hand"
                       Click="btnBookAppointment_Click"/>
                <Button x:Name="btnLogout"
                       Grid.Column="2"
                       Content="Log Out" 
                       Width="160"
                       Height="40"
                       Background="#27AE60"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="Bold"
                       BorderThickness="0"
                       Margin="0,0,15,0"
                       Cursor="Hand"
                       Click="btnBookAppointment_Click"/>
            </Grid>
        </Border>
        <!-- Appointments Table -->
        <Border Grid.Row="1" Background="White" Margin="20,20,20,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Title -->
                <TextBlock Grid.Row="0" 
              Text="My Appointments:" 
              FontSize="18" 
              FontWeight="Bold"
              Margin="15,15,15,10"/>
                <!-- DataGrid -->
                <DataGrid Grid.Row="1" 
             x:Name="dgAppointments"
             AutoGenerateColumns="False"
             IsReadOnly="True"
             SelectionMode="Single"
             CanUserAddRows="False"
             HeadersVisibility="Column"
             GridLinesVisibility="All"
             AlternatingRowBackground="#F8F9FA"
             Margin="15,0,15,15">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" 
                              Binding="{Binding AppointmentDate}" 
                              Width="100"/>
                        <DataGridTextColumn Header="Time" 
                              Binding="{Binding TimeSlot}" 
                              Width="100"/>
                        <DataGridTextColumn Header="Stylist" 
                              Binding="{Binding StylistName}" 
                              Width="150"/>
                        <DataGridTextColumn Header="Service" 
                              Binding="{Binding ServiceName}" 
                              Width="*"/>
                        <DataGridTextColumn Header="Price" 
                              Binding="{Binding TotalPrice}" 
                              Width="80"/>
                        <DataGridTextColumn Header="Status" 
                              Binding="{Binding Status}" 
                              Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        <!-- Footer with Cancel Button -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="20,10">
            <Button x:Name="btnCancelAppointment" 
                   Content="Cancel Selected Appointment" 
                   Width="220"
                   Height="40"
                   Background="#E67E22"
                   Foreground="White"
                   FontSize="14"
                   BorderThickness="0"
                   HorizontalAlignment="Center"
                   Cursor="Hand"
                   Click="btnCancelAppointment_Click"/>
        </Border>
    </Grid>
</Window>
