<Window x:Class="HairSalon.WPF.BookAppointmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HairSalon.WPF"
        mc:Ignorable="d"
        Title="BookAppointmentWindow" Height="450" Width="800">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50">
            <TextBlock Text="Book New Appointment" 
                      FontSize="20" 
                      FontWeight="Bold" 
                      Foreground="White"
                      VerticalAlignment="Center"
                      Margin="20,0"/>
        </Border>

        <!-- Form -->
        <StackPanel Grid.Row="1" Margin="40,30">

            <!-- Select Date -->
            <TextBlock Text="Select Date:" 
                      FontSize="14" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,8"/>
            <DatePicker x:Name="dpAppointmentDate" 
                       Height="40" 
                       FontSize="14"
                       Margin="0,0,0,20"/>

            <!-- Select Time -->
            <TextBlock Text="Select Time:" 
                      FontSize="14" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,8"/>
            <ComboBox x:Name="cmbTimeSlot" 
                     Height="40" 
                     FontSize="14"
                     Margin="0,0,0,20">
                <ComboBoxItem Content="Morning (9 AM - 12 PM)"/>
                <ComboBoxItem Content="Afternoon (1 PM - 4 PM)"/>
                <ComboBoxItem Content="Evening (5 PM - 8 PM)"/>
            </ComboBox>

            <!-- Select Stylist -->
            <TextBlock Text="Select Stylist:" 
                      FontSize="14" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,8"/>
            <ComboBox x:Name="cmbStylist" 
                     Height="40" 
                     FontSize="14"
                     DisplayMemberPath="FullName"
                     Margin="0,0,0,20"/>

            <!-- Select Service -->
            <TextBlock Text="Select Service:" 
                      FontSize="14" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,8"/>
            <ComboBox x:Name="cmbService" 
                     Height="40" 
                     FontSize="14"
                     DisplayMemberPath="ServiceName"
                     Margin="0,0,0,20"
                     SelectionChanged="cmbService_SelectionChanged"/>

        </StackPanel>

        <!-- Footer with Price and Buttons -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="20">
            <StackPanel>
                <!-- Price Display -->
                <Border Background="White" 
                       Padding="15" 
                       CornerRadius="5"
                       Margin="0,0,0,15">
                    <Grid>
                        <TextBlock Text="Total Price:" 
                                  FontSize="14"
                                  VerticalAlignment="Center"/>
                        <TextBlock x:Name="lblTotalPrice"
                                  Text="$0.00" 
                                  FontSize="18"
                                  FontWeight="Bold"
                                  Foreground="#27AE60"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnConfirm" 
                           Grid.Column="0"
                           Content="CONFIRM" 
                           Height="40"
                           Background="#27AE60"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           BorderThickness="0"
                           Margin="0,0,10,0"
                           Cursor="Hand"
                           Click="btnConfirm_Click"/>

                    <Button x:Name="btnCancel" 
                           Grid.Column="1"
                           Content="CANCEL" 
                           Height="40"
                           Background="#95A5A6"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           BorderThickness="0"
                           Margin="10,0,0,0"
                           Cursor="Hand"
                           Click="btnCancel_Click"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
