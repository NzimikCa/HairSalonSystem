<Window x:Class="HairSalon.WPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HairSalon.WPF.Views"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Hair Salon Management" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="White"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,5"/>
                <TextBlock Text="Please login to continue" 
                      FontSize="12" 
                      Foreground="#BDC3C7"
                      HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Login Form -->
        <StackPanel Grid.Row="1" 
               VerticalAlignment="Center" 
               Margin="60,0,60,0">

            <!-- Username -->
            <TextBlock Text="Username:" 
                  FontSize="14" 
                  FontWeight="SemiBold"
                  Margin="0,0,0,8"/>
            <TextBox x:Name="txtUsername" 
                Height="40" 
                FontSize="14"
                Padding="10"
                Margin="0,0,0,20"
                BorderBrush="#BDC3C7"
                BorderThickness="2"/>

            <!-- Password -->
            <TextBlock Text="Password:" 
                  FontSize="14" 
                  FontWeight="SemiBold"
                  Margin="0,0,0,8"/>
            <PasswordBox x:Name="txtPassword" 
                    Height="40" 
                    FontSize="14"
                    Padding="10"
                    Margin="0,0,0,15"
                    BorderBrush="#BDC3C7"
                    BorderThickness="2"/>

            <!-- Error Message -->
            <TextBlock x:Name="lblError" 
                  Text="" 
                  Foreground="Red" 
                  FontSize="12"
                  TextWrapping="Wrap"
                  Margin="0,0,0,15"
                  HorizontalAlignment="Center"
                  Visibility="Collapsed"/>

            <!-- Login Button -->
            <Button x:Name="btnLogin" 
               Content="Login" 
               Height="45" 
               FontSize="16"
               FontWeight="Bold"
               Background="#27AE60"
               Foreground="White"
               BorderThickness="0"
               Cursor="Hand"
               Click="btnLogin_Click"/>

        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#ECF0F1">
            <TextBlock Text="© 2025 Hair Salon System" 
                  FontSize="10" 
                  Foreground="#7F8C8D"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
